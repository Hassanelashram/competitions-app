<div class="container my-5">
  <div class="row filter-box">
    <div class="col-1">
      <i class="fas fa-filter"></i>
    </div>
    <div class="col">
      <%= link_to 'Lowest Entrance', competitions_path(entrance: 'lowest')  %>
    </div>
    <div class="col">
      <%= link_to 'Highest Award', competitions_path(award: 'highest')  %>
    </div>
    <div class="col">
      <%= link_to 'Ending soon', competitions_path(end_date: 'soon')  %>
    </div>
  </div>

      <div class="row my-3 text-center mx-auto">
         <div class="col-5 mx-auto col-lg m-1 d-inline pill <%= 'active' if params[:category] == 'all' %>">
              <%= link_to "all #{Competition.active.count}", competitions_path(category: "all")  %>
            </div>
          <% @categories.each do |category|  %>
            <div class="col-5 mx-auto col-lg m-1 d-inline pill <%= 'active' if params[:category] == category %>">
              <%= link_to "#{category} #{(Competition.category_count(category))}", competitions_path(category: category)  %>
              
            </div>
          <% end %>

      </div>

  <div class="row">
    <% @comp.each do |c| %>
        <div class="col-sm-12 col-lg-4 my-2">
          <%= link_to c do  %>
          <div class="card">
            <div class="card-top" style="background-image: url('<%= c.image %>')">
              <div class="badge badge-purple p-2 m-2">
                <%= c.ends_in %>
              </div>
            </div>
            <div class="card-bottom d-flex justify-content-between">
              <div>
                <h4><strong><%= c.name %></strong></h4>
                <p><%= c.participations.count %>/<%= c.max_entries %> Participants</p>
                <p>Cost: <%= humanized_money_with_symbol c.price %></p>
                <h4>Prize: $<%= c.award %></h4>
              </div>
            </div>
         </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>