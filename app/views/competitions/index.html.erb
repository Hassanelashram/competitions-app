

<div class="container my-5">
  <div class="row filter-box">
    <div class="col-1">
      <i class="fas fa-filter"></i>
    </div>
    <div class="col-3">
      <%= link_to 'Lowest Entrance', competitions_path(entrance: 'lowest')  %>
    </div>
    <div class="col-3">
      <%= link_to 'Highest Award', competitions_path(award: 'highest')  %>
    </div>
    <div class="col-3">
      <%= link_to 'Ending soon', competitions_path(end_date: 'soon')  %>
    </div>
  </div>
  <div class="row">
    <% @comp.each do |c| %>
        <div class="col-4 my-2">
          <%= link_to c do  %>
          <div class="card">
            <div class="card-top" style="background-image: url('<%= c.image %>')">
              <div class="badge badge-success p-2 m-2">
                <%= c.ends_in %>
              </div>
            </div>
            <div class="card-bottom d-flex justify-content-between">
              <div>
                <h4><%= c.name %></h4>
                <p><%= c.participations.count %>/<%= c.max_entries %> Participants</p>
              </div>
              <div>
                <h4>Entrance: <%= humanized_money_with_symbol c.price %></h4>
                <h4>Award: $<%= c.award %></h4>
                <h2><%= c.winning.id if c.winning.present? %></h2>
              </div>
            </div>
         </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
